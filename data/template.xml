     <dnsDomain>calls.local</dnsDomain>
     <primaryWINS></primaryWINS>
     <secondaryWINS></secondaryWINS>
   </Network-Spec>
   <VM-Spec name="YetAnothertagname">
        <memoryMB>1024</memoryMB>
        <Disksize>NOT IMPLEMENTED</Disksize>
        <numCPUs>1</numCPUs>
    </VM-Spec>
</Specification>
